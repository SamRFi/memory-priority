<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="memorypriority.ui.LoginScreenController">
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <Label text="%label.login" style="-fx-font-size: 24"/>
        <ComboBox fx:id="profileComboBox" promptText="%selectProfile"/>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="removeProfileButton" text="Remove Profile"/>
            <Button fx:id="loginButton" text="Login"/>
        </HBox>
        <Separator />
        <TextField fx:id="usernameField" promptText="%createProfile"/>
        <Button fx:id="addProfileButton" text="Add Profile"/>
        <HBox spacing="10" alignment="CENTER_RIGHT">

        </HBox>
    </VBox>
</AnchorPane>
