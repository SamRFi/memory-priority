<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="memorypriority.ui.AddMemorySetController"
            prefHeight="500.0" prefWidth="600.0">
    <VBox spacing="10">
        <!-- MemorySet Name -->
        <TextField fx:id="memorySetName" promptText="Memory Set Name"/>

        <!-- MemorySet Priority Level -->
        <ComboBox fx:id="priorityLevel" promptText="Priority Level">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="HIGH"/>
                    <String fx:value="MEDIUM"/>
                    <String fx:value="LOW"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Explanation Label -->
        <Label text="Explanation on top of key-value pairs..." wrapText="true"/>

        <!-- Dynamic Key-Value Pairs Container -->
        <GridPane fx:id="keyValuePairsContainer" vgap="10">

        </GridPane>

        <!-- Add More Rows Button -->
        <Button text="+" onAction="#handleAddMoreRowsButtonAction"/>

        <!-- Save Button -->
        <Button text="Save" onAction="#handleSaveButtonAction"/>
    </VBox>
</AnchorPane>
