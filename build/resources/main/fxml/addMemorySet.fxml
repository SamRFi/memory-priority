<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"

            prefHeight="400.0" prefWidth="600.0">
<VBox spacing="10">
    <!-- Explanation Label -->
    <Label text="Explanation on top of key-value pairs..." wrapText="true"/>

    <!-- Dynamic Key-Value Pairs Container -->
    <GridPane fx:id="keyValuePairsContainer" vgap="10">
        <!-- Sample Row (You'd dynamically add more rows like this in your controller) -->
        <HBox>
            <Button text="🔍"/>
            <TextField promptText="Key"/>
            <TextField promptText="Value"/>
            <Button text="❌"/>
        </HBox>
    </GridPane>

    <!-- Add More Rows Button -->
    <Button text="+"/>

    <!-- Save Button -->
    <Button text="Save"/>
</VBox>


</AnchorPane>
